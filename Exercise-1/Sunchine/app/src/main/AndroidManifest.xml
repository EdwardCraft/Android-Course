<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.sunchine.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DailyActivity"
            android:label="@string/title_activity_daily"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.sunchine.app.MainActivity" />
        </activity>

        <activity
            android:name=".SttingsActivity"
            android:label="@string/title_activity_sttings"
            android:parentActivityName=".MainActivity"
            ></activity>

        <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity"
                />
        <provider
            android:authorities="com.example.android.sunchine.app"
            android:name=".data.WeatherProvider"
        ></provider>
    </application>

</manifest>